---
import Css from "../icons/Css.astro";
import Html from "../icons/html.astro";
import JavaScript from "../icons/javaScript.astro";
import Astroicon from "../icons/Astroicon.astro";
import Java from "../icons/java.astro";
import SqlServer from "../icons/SqlServer.astro";
import MySQl from "../icons/MySQl.astro";
import Node from "../icons/node.astro";
---

<section class="py-24 from-black/20 to-transparent">
    <div class="max-w-6xl mx-auto px-4">
        <h2 class="text-5xl font-bold text-center mb-12">Habilidades Técnicas</h2>
        <p class="text-center text-gray-400 mb-16 max-w-2xl mx-auto">Conjunto de tecnologías y conocimientos que he adquirido a lo largo de mi trayectoria profesional.</p>


        <div class="skills-container">
            <!-- Frontend Section -->
            <div class="skill-section">
                <div class="section-header">
                    <div class="category-indicator"></div>
                    <h3 class="section-title">Frontend</h3>
                </div>
                <div class="skills-grid">
                    <div class="skill-card group">
                        <Html class="w-20 h-20 mx-auto group-hover:scale-110 transition-transform" />
                        <span class="skill-name">HTML5</span>
                    </div>
                    <div class="skill-card group">
                        <Css class="w-20 h-20 mx-auto group-hover:scale-110 transition-transform" />
                        <span class="skill-name">CSS3</span>
                    </div>
                    <div class="skill-card group">
                        <JavaScript class="w-20 h-20 mx-auto group-hover:scale-110 transition-transform" />
                        <span class="skill-name">JavaScript</span>
                    </div>
                    <div class="skill-card group">
                        <Astroicon class="w-20 h-20 mx-auto group-hover:scale-110 transition-transform" />
                        <span class="skill-name">Astro</span>
                    </div>
                </div>
            </div>

            <!-- Backend Section -->
            <div class="skill-section">
                <div class="section-header">
                    <div class="category-indicator backend"></div>
                    <h3 class="section-title">Backend</h3>
                </div>
                <div class="skills-grid">
                    <div class="skill-card group">
                        <Java class="w-20 h-20 mx-auto group-hover:scale-110 transition-transform" />
                        <span class="skill-name">Java</span>
                    </div>
                    <div class="skill-card group">
                        <SqlServer class="w-20 h-20 mx-auto group-hover:scale-110 transition-transform" />
                        <span class="skill-name">SQL Server</span>
                    </div>
                    <div class="skill-card group">
                        <MySQl class="w-20 h-20 mx-auto group-hover:scale-110 transition-transform" />
                        <span class="skill-name">MySQL</span>
                    </div>
                    <div class="skill-card group">
                        <Node class="w-20 h-20 mx-auto group-hover:scale-110 transition-transform" />
                        <span class="skill-name">Node.js</span>
                    </div>
                </div>
            </div>

            <!-- Puedes añadir más secciones siguiendo el mismo patrón -->
        </div>
    </div>
</section>

<style>
    /* Estilos del contenedor principal */
    .skills-container {
        @apply space-y-16;
    }
    
    /* Estilos de la sección de habilidades */
    .skill-section {
        @apply relative rounded-xl p-6 bg-black/10 border border-gray-800/50 hover:border-gray-700/70 transition-all duration-300;
    }
    
    /* Estilos del encabezado de sección */
    .section-header {
        @apply flex items-center mb-8 gap-3;
    }
    
    /* Indicador de categoría */
    .category-indicator {
        @apply w-3 h-12 bg-gradient-to-b from-yellow-200 to-yellow-500/50 rounded-full;
    }
    
    .category-indicator.backend {
        @apply from-blue-300 to-blue-500/50;
    }
    
    .category-indicator.web {
        @apply from-green-300 to-green-500/50;
    }
    
    .category-indicator.tools {
        @apply from-purple-300 to-purple-500/50;
    }
    
    /* Título de la sección */
    .section-title {
        @apply text-2xl font-semibold text-yellow-200;
    }
    
    .skill-section:has(.category-indicator.backend) .section-title {
        @apply text-blue-300;
    }
    
    .skill-section:has(.category-indicator.web) .section-title {
        @apply text-green-300;
    }
    
    .skill-section:has(.category-indicator.tools) .section-title {
        @apply text-purple-300;
    }
    
    /* Grid de habilidades */
    .skills-grid {
        @apply grid grid-cols-2 md:grid-cols-4 gap-8;
    }
    
    /* Tarjeta de habilidad */
    .skill-card {
        @apply p-6 rounded-xl bg-black/20 border border-gray-800 hover:border-yellow-200/50 transition-all duration-300;
    }
    
    .skill-section:has(.category-indicator.backend) .skill-card:hover {
        @apply hover:border-blue-300/50;
    }
    
    .skill-section:has(.category-indicator.web) .skill-card:hover {
        @apply hover:border-green-300/50;
    }
    
    .skill-section:has(.category-indicator.tools) .skill-card:hover {
        @apply hover:border-purple-300/50;
    }
    
    /* Nombre de la habilidad */
    .skill-name {
        @apply block text-center mt-4 text-gray-400 group-hover:text-white transition-colors;
    }
    
    /* Iconos personalizados para nuevas habilidades */
    .skill-icon {
        @apply w-20 h-20 mx-auto rounded-full flex items-center justify-center text-2xl font-bold group-hover:scale-110 transition-transform bg-gradient-to-br;
    }
    
    .skill-icon.react {
        @apply from-blue-400 to-cyan-500 text-white before:content-['R'];
    }
    
    .skill-icon.nextjs {
        @apply from-gray-700 to-black text-white before:content-['N'];
    }
    
    .skill-icon.tailwind {
        @apply from-cyan-400 to-blue-500 text-white before:content-['T'];
    }
    
    .skill-icon.typescript {
        @apply from-blue-500 to-blue-700 text-white before:content-['TS'];
    }
    
    .skill-icon.git {
        @apply from-orange-500 to-red-500 text-white before:content-['G'];
    }
    
    .skill-icon.vscode {
        @apply from-blue-500 to-blue-700 text-white before:content-['VS'];
    }
    
    .skill-icon.figma {
        @apply from-purple-500 to-pink-500 text-white before:content-['F'];
    }
    
    .skill-icon.docker {
        @apply from-blue-400 to-blue-600 text-white before:content-['D'];
    }
</style>