---
// Layout.astro
import Header from '../components/header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portfolio de Alex Herbas - Desarrollador Web" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative bg-neutral-950">
    <!-- Efectos de fondo -->
    <div class="fixed top-0 z-[-1] h-screen w-screen bg-noise opacity-5"></div>
    <div class="fixed top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_75%_89%_at_45%_-5%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
    
    <!-- Header -->
    <Header />
    
    <!-- Contenido principal - aseguramos que ocupe todo el ancho disponible -->
    <main class="w-full overflow-x-hidden">
      <slot />
    </main>

    <!-- Efectos adicionales - blobs de luz -->
    <div class="fixed top-20 left-0 w-[300px] h-[300px] bg-purple-200 rounded-full shadow-2xs filter blur-[150px] opacity-20 z-[-1]"></div>
    <div class="fixed bottom-0 right-0 w-[400px] h-[400px] bg-purple-200 rounded-full filter blur-[100px] opacity-10 z-[-1]"></div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }

  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    color: white;
    overflow-x: hidden; /* Prevenir scroll horizontal */
  }

  /* Estilos para asegurar que las secciones ocupen el ancho completo */
  section {
    width: 100%;
    max-width: 100%;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  /* Contenedores responsivos */
  .container {
    width: 100%;
    max-width: 1280px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  /* Media queries para ajustar padding en m√≥viles */
  @media (max-width: 640px) {
    .container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>